<form id="pagerForm" method="post" action="index.php?action=daily">
	<input type="hidden" name="pageNum" value="1" />
    <input type="hidden" name="numPerPage" value="20" />
	<input type="hidden" name="name" value="{$smarty.request.name}"/>
	<input type="hidden" name="time_start" value="{$smarty.request.time_start}"/>
	<input type="hidden" name="time_over" value="{$smarty.request.time_over}"/>
</form>

<div class="page">
	<div class="pageHeader">
		<form onsubmit="return navTabSearch(this);" action="index.php?action=daily" method="post">
		<div class="searchBar">
			<table class="searchContent">
				<tr>
					<td>
						客户名称:<input type="text" name="name" size="12" value="{$smarty.request.name}"/>
					</td>
					<td>
						拜访时间:<input type="text" name="time_start" size="9" class="date" readonly="true" value="{$smarty.request.time_start}"/>
						-<input type="text" name="time_over" size="9" class="date" readonly="true" value="{$smarty.request.time_over}"/>
					</td>
					{if $smarty.session.roleid != "3"}						
					<td>
					<!--{$salesid_cn}-->
					</td>
					{/if}
					<td>
					<div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div>
					</td>
				</tr>
			</table>
		</div>
		</form>
	</div>
	<div class="pageContent">
		<div class="panelBar">
			<ul class="toolBar">
				<li><a class="edit" href="?action=daily&do=edit&id={id}" target="dialog" mask="true"><span>编辑</span></a></li>
				<li class="line">line</li>
				<li><a class="delete" href="?action=daily&do=del&id={id}" target="ajaxTodo" title="确定要删除吗?"><span>删除</span></a></li>
				
			</ul>
		</div>
		<table class="list" layouth="91" style="width:1000px;">
			<thead>
				<tr>
					<th align="center">ID</th>
					<th align="center">销售</th>
					<th align="center">客户名称</th>
					<th align="center">产品销量</th>
					<th align="center">拜访图片</th>	
					<th align="center">描述</th>
					<th align="center">拜访时间</th>
				</tr>
			</thead>
			<tbody>			
			<!--{foreach from=$list item=row}-->
				<tr target="id" rel="<!--{$row.id}-->" >
					<td><!--{$row.id}--></td>		
					<td><!--{$row.salesid_txt}--></td>
					<td><!--{$row.name}--></td>
					<td><!--{$row.sellproduct_txt}--></td>
					<td>
					{if $row.filename !=""}
					<a href="uploadfile/<!--{$row.filename}-->" target="_blank">
						<img src="uploadfile/m_<!--{$row.filename}-->" width=40 height=40 />
					</a>
					{else}
					无
					{/if}
					</td>
					<td><!--{$row.intro|default:无}--></td>
					<td><!--{$row.created_at}--></td>
				</tr>			
			<!--{/foreach}-->
			</tbody>
		</table>
		<div class="panelBar">
			<div class="pages">
				<span>共{$total}条</span>
			</div>
			
			<div class="pagination" targetType="navTab" totalCount="{$total}" numPerPage="20" pageNumShown="10" currentPage="{$pageNum}"></div>

		</div>
	</div>
</div>