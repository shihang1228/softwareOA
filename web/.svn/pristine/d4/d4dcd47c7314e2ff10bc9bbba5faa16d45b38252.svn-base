<form id="pagerForm" method="post" action="index.php?action=room">
	<input type="hidden" name="pageNum" value="1" />
    <input type="hidden" name="numPerPage" value="24" />
	<input type="hidden" name="name" value="{$smarty.request.name}"/>
	<input type="hidden" name="address" value="{$smarty.request.address}"/>

</form>

<div class="page">
	<div class="pageHeader">
		<form onsubmit="return navTabSearch(this);" action="index.php?action=room" method="post">
		<div class="searchBar">
			<table class="searchContent">
				<tr>
					<td>
						库房名称:<input type="text" name="name" size="12" value="{$smarty.request.name}"/>
					</td>
					<td>
						所在地区:<input type="text" name="address" size="12" value="{$smarty.request.address}"/>
					</td>
					<!-- <td>
						发生时间:<input type="text" name="time_start" size="9" class="date" readonly="true" value="{$smarty.request.time_start}"/>
						-<input type="text" name="time_over" size="9" class="date" readonly="true" value="{$smarty.request.time_over}"/>
					</td>					
					{if $smarty.session.roleid != "3"}	
					<td>
					
					</td>
					{/if} -->
					<td>
					<div class="buttonActive"><div class="buttonContent"><button type="submit">检索</button></div></div>
					</td>
				</tr>
			</table>
		</div>
		</form>
	</div>
	<div class="pageContent">
		<div class="panelBar">
			<ul class="toolBar">
				<li><a class="add" href="?action=room&do=new" target="dialog" mask="true"><span>新增库房</span></a></li>
				<li><a class="delete" href="?action=room&do=del&id={id}" target="ajaxTodo"  title="确定要删除吗?"><span>删除库房</span></a></li>
				<li><a class="edit" href="?action=room&do=edit&id={id}" target="dialog" mask="true"><span>修改库房</span></a></li>
				
			</ul>
		</div>
		<table class="list" layouth="91" style="width:1220px;">
			<thead>
				<tr align=center>
					<th align="center">ID</th>
					<th align="center">仓库名称</th>
					<th align="center">所在地区</th>				
					
				</tr>
			</thead>
			<tbody>			
			<!--{foreach from=$list item=row}-->
				<tr target="id" rel="<!--{$row.id}-->" align=center>
					<td><!--{$row.id}--></td>
					<td><!--{$row.name}--></td>	
					<td><!--{$row.address}--></td>
					
				</tr>			
			<!--{/foreach}-->
			</tbody>
		</table>
		<div class="panelBar">
			<div class="pages">
				<span>共{$total}条</span>
			</div>
			
			<div class="pagination" targetType="navTab" totalCount="{$total}" numPerPage="24" pageNumShown="10" currentPage="{$pageNum}"></div>

		</div>
	</div>
</div>